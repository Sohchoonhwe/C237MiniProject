<!-- booking.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookings</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css">
</head>
<style>
/* styles.css */

/* General Styles */
body {
    font-family: 'Helvetica Neue', Arial, sans-serif;
    background-color: #f8f9fa;
    color: #343a40;
    margin: 0;
    padding: 0;
}

/* Navbar Styles */
.navbar {
    background-color: #007bff;
}

.navbar .navbar-brand,
.navbar .nav-link {
    color: #fff;
}

.navbar .nav-link:hover {
    color: #d4e2f0;
}

/* Main Container */
main.container {
    background: #ffffff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
    padding: 20px;
}

/* Table Styles */
table.table {
    margin-top: 20px;
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
}

table.table thead {
    background-color: #007bff;
    color: #fff;
}

table.table th, table.table td {
    padding: 15px;
    text-align: left;
    border: 1px solid #ddd;
    white-space: nowrap;
}

table.table th {
    background-color: #007bff;
    color: white;
}

table.table tr:hover {
    background-color: #f1f1f1;
}

table.table .btn {
    padding: 8px 12px;
    font-size: 0.875rem;
}

/* Footer Styles */
footer.bg-light {
    background-color: #f8f9fa !important;
    color: #6c757d;
}

footer.bg-light p {
    margin: 0;
}

/* Button Styles */
.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
}

.btn-primary:hover {
    background-color: #0056b3;
    border-color: #004085;
}

.btn-danger {
    background-color: #dc3545;
    border-color: #dc3545;
}

.btn-danger:hover {
    background-color: #c82333;
    border-color: #bd2130;
}

/* Responsive Styles */
@media (max-width: 768px) {
    table.table thead {
        display: none;
    }

    table.table, table.table tbody, table.table tr, table.table td {
        display: block;
        width: 100%;
    }

    table.table tr {
        margin-bottom: 15px;
    }

    table.table td {
        text-align: right;
        padding-left: 50%;
        position: relative;
    }

    table.table td::before {
        content: attr(data-label);
        position: absolute;
        left: 0;
        width: 50%;
        padding-left: 15px;
        font-weight: bold;
        text-align: left;
    }
}

</style>
<body>
    <%- include('partials/navbar.ejs') %>
    <main class="container mt-4">
        <h2>All Bookings</h2>

        <!-- Search form -->
        <form action="/booking/search" method="GET" class="mb-4">
            <div class="form-group">
                <input type="text" name="query" class="form-control" placeholder="Search by Booking ID or Name">
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>

        <!-- Booking table -->
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Room Type</th>
                    <th>Room Number</th>
                    <th>Check-in Date</th>
                    <th>Check-out Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% booking.forEach(function(booking) { %>
                    <tr>
                        <td><%= booking.BookingID %></td>
                        <td><%= booking.UserName %></td>
                        <td><%= booking.UserEmail %></td>
                        <td><%= booking.RoomTypeName %></td>
                        <td><%= booking.RoomNumber %></td>
                        <td><%= booking.CheckInDate.toISOString().slice(0, 10) %></td>
                        <td><%= booking.CheckOutDate.toISOString().slice(0, 10) %></td>
                        <td>
                            <a href="/booking/<%= booking.BookingID %>/edit" class="btn btn-primary btn-sm">Edit</a>
                            <a href="/booking/<%= booking.BookingID %>/delete" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        
    </main>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
